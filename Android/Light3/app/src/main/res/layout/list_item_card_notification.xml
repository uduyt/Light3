<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notif_intro"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="@color/Secundary"
    card_view:contentPadding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_notifications"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/notif_textview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Accent"
                android:text="Aquí aparecerán tus notificaciones"
                android:fontFamily="Roboto"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/notif_textview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Accent"
                android:text="En esta pantalla podrás ver tus notificaciones de Light"
                android:fontFamily="Roboto"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Entendido"
                android:id="@+id/notif_but1"
                android:textColor="@color/Accent"

                android:backgroundTint="@color/PrimaryVeryDark"
                android:textStyle="bold"
                android:textSize="12sp"
                android:elevation="0dp"
                android:stateListAnimator="@null" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>